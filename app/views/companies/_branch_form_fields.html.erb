<div class="row">
  <div class="col-md-3">
    <%= branch.label 'Branch name' %>
    <%= branch.text_field :branch_name, class: 'form-control', placeholder: 'branch name' %>
  </div>
  <div class="col-md-3 form-group">
    <%= branch.label '# of visits' %>
    <%= branch.number_field :visits_per_month, class: 'form-control' %>
  </div>
</div>

<div class="row">
  <div class="col-md-3 form-group">
    <%= branch.label 'Sale representative' %>
    <%= branch.select :representative, options_for_select(@sale_representatives.collect {|p| [ p[:name], p[:id] ] }), {include_blank: 'Select saler'}, class: 'form-control' %>
  </div>
  <div class="col-md-3 form-group">
    <%= branch.label 'Status' %>
    <%= branch.select :branch_status, options_for_select(@statuses), class: 'form-control' %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Contact Info
    <span style="margin-left: 20px;">
      <%= branch.check_box :contact_same_as_above, {class: 'contact_same_as'}, true, false %>  <%= branch.label :contact_same_as_above, 'Same as above?', style: 'display: inline-block;' %>
      <%#= branch.check_box :contact_same_as_above %>
      <%#= branch.label :contact_same_as_above, 'same as above?', style: 'display: inline-block;' %>
    </span>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3 form-group">
        <%= branch.label 'Contact name' %>
        <%= branch.text_field :contact_name, class: 'form-control', placeholder: 'cont. name' %>
      </div>

      <div class="col-md-3">
        <%= branch.label 'Contact email' %>
        <%= branch.text_field :contact_email, class: 'form-control', placeholder: 'cont. email' %>
      </div>

      <div class="col-md-3">
        <%= branch.label 'Contact phone' %>
        <%= branch.number_field :contact_phone, class: 'form-control', placeholder: 'cont. phone' %>
      </div>
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    Misc Info
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3">
        <%= branch.label 'Type of establishment' %>
        <%= branch.select :food_type_id, options_for_select(@food_types.collect {|p| [ p[:name], p[:id] ] }), class: 'form-control' %>
      </div>

      <div class="col-md-3">
        <%= branch.label 'Monthly oil used (kg)' %>
        <%= branch.text_field :monthly_oil_used, class: 'form-control', placeholder: 'oil used (kg)' %>
      </div>

      <div class="col-md-3">
        <%= branch.label 'Rate/kg' %>
        <%= branch.text_field :rate_per_kg, class: 'form-control', placeholder: 'amount/kg' %>
      </div>

      <div class="col-md-3 form-group">
        <%= branch.label 'Storage type' %>
        <%= branch.select :storage_type_id, options_for_select(@storage_types.collect {|p| [ p[:name], p[:id] ] }), class: 'form-control' %>
      </div>
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    Address Info
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3">
        <%= branch.select :state_id, options_for_select(@states.collect { |p| [p[:name], p[:id]] }), { include_blank: 'Select sate' }, class: 'form-control', id: 'branch_state_id' %>
      </div>
      <div class="col-md-3">
        <%= branch.select :city_id, options_for_select(@cities.collect { |p| [p[:name], p[:id], {parent_id: p.state_id}]}), { include_blank: 'Select city' }, class: 'form-control', id: 'branch_city_id' %>
      </div>
      <div class="col-md-3">
        <%= branch.select :area_id, options_for_select(@areas.collect { |p| [p[:name], p[:id], {parent_id: p.city_id}] }), { include_blank: 'Select area' }, class: 'form-control', id: 'branch_area_id' %>
      </div>
      <div class="col-md-3">
        <%= branch.text_field :area_name, placeholder: 'Other Area' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= branch.text_field :street, placeholder: 'street' %>
      </div>
      <div class="col-md-3">
        <%= branch.text_field :zip, placeholder: 'zip' %>
      </div>
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    Lat/Long
  </div>
  <div class="panel-body">
    <div class="col-md-3">
      <%= branch.text_field :latitude, placeholder: 'latitude' %>
    </div>

    <div class="col-md-3">
      <%= branch.text_field :longitude, placeholder: 'longitude' %>
    </div>
  </div>
</div>