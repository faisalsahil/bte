<div class="row">
  <div class="col-md-3 form-group">
    <%= branch.label 'Company' %>
    <%= branch.select :company_id, options_for_select(Company.all.collect {|p| [ p[:company_name], p[:id] ] }), class: 'form-control' %>
  </div>
  <div class="col-md-3">
    <%= branch.label 'Branch name' %>
    <%= branch.text_field :branch_name, class: 'form-control', placeholder: 'branch name' %>
  </div>
  <div class="col-md-3 form-group">
    <%= branch.label 'Status' %>
    <%= branch.select :branch_status, options_for_select(@statuses), class: 'form-control' %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    Contact Info
    <%= check_box_tag 'contact_same_as_above', nil, false %><%= 'Same as above?' %>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3 form-group">
        <%= branch.label 'Contact name' %>
        <%= branch.text_field :contact_name, class: 'form-control', placeholder: 'cont. name' %>
      </div>

      <div class="col-md-3">
        <%= branch.label 'Contact email' %>
        <%= branch.text_field :contact_email, class: 'form-control', placeholder: 'cont. email' %>
      </div>

      <div class="col-md-3">
        <%= branch.label 'Contact phone' %>
        <%= branch.number_field :contact_phone, class: 'form-control', placeholder: 'cont. phone' %>
      </div>
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    Misc Info
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3">
        <%= branch.label 'Type of establishment' %>
        <%= branch.select :food_type_id, options_for_select(FoodType.all.collect {|p| [ p[:name], p[:id] ] }), class: 'form-control' %>
      </div>

      <div class="col-md-3">
        <%= branch.label 'Monthly oil used (kg)' %>
        <%= branch.text_field :monthly_oil_used, class: 'form-control', placeholder: 'oil used (kg)' %>
      </div>

      <div class="col-md-3">
        <%= branch.label 'Rate/kg' %>
        <%= branch.text_field :rate_per_kg, class: 'form-control', placeholder: 'amount/kg' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 form-group">
        <%= branch.label 'Storage type' %>
        <%= branch.select :storage_type_id, options_for_select(StorageType.all.collect {|p| [ p[:name], p[:id] ] }), class: 'form-control' %>
      </div>
    </div>
  </div>
</div>
<div class="row panel panel-default">
  <div class="panel-heading">
    Address Info
  </div>
  <div class="panel-body">

    <div class="col-md-3">
      <%= branch.select :state_id, options_for_select(State.all.collect {|p| [ p[:name], p[:id] ] }), {include_blank: 'Select sate'}, class: 'form-control', id: 'branch_state_id' %>
    </div>

    <div class="col-md-3">
      <select name="company[branches_attributes][0][city_id]" id="branch_city_id" class="hidden"></select>
    </div>

    <div class="col-md-3">
      <select name="company[branches_attributes][0][area_id]" id="branch_area_id" class="hidden"></select>
    </div>

    <div class="col-md-3">
      <%= branch.text_field :street, placeholder: 'street', class: 'hidden', id: 'branch_street' %>
    </div>

    <div class="col-md-3">
      <%= branch.text_field :zip, placeholder: 'zip', class: 'hidden', id: 'branch_zip' %>
    </div>
  </div>
</div>