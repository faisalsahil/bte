<ul class="breadcrumb">
  <li><p>YOU ARE HERE</p></li>
  <li><a href="#" class="active">Cities</a></li>
  <li><%= link_to 'New city', new_city_path, class:'btn btn-mini btn-primary' %></li>
</ul>
<div class="row">
  <div class="col-md-12">
    <div class="grid simple ">
      <div class="grid-body no-border">
        <table class="table table-striped list-data-table">
          <thead>
          <tr>
            <th>City</th>
            <th>State</th>
            <th>Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @cities.each do |city| %>
              <tr>
                <td><%= city.name %></td>
                <td><%= city.state.name %></td>
                <td>
                  <%= link_to '', edit_city_path(city), class: 'fa fa-edit' %>
                  <%= link_to '', city, method: :delete, class: 'fa fa-trash', data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
