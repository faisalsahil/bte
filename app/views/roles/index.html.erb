<ul class="breadcrumb">
  <li><p>YOU ARE HERE</p></li>
  <li><a href="#" class="active">Roles</a></li>
  <%= link_to 'New role', new_role_path, class:'btn btn-mini btn-primary pull-right' %>
</ul>
<br/>
<div class="row">
  <div class="col-md-12">
    <div class="grid-body no-border">
        <table class="table table-striped list-data-table">
          <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @roles.each do |role| %>
              <tr>
                <td><%= role.name %></td>
                <td>

                  <%= link_to 'edit', edit_role_path(role), class: 'btn btn-mini btn-primary' %>
                  <% if role.is_deleted %>
                      <%= link_to 'undo', role, method: :delete, class: 'btn btn-mini btn-warning', data: { confirm: 'Are you sure?' } %>
                  <% else %>
                      <%= link_to 'delete', role, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>

