<%= form_for(@vehicle) do |f| %>
    <% if @vehicle.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this task from being saved:</h2>
          <ul>
            <% @vehicle.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

  <div class="form-group">
    <%= f.label 'Vehicle Type' %>
    <%= f.text_field :vehicle_type, placeholder: 'vehicle type' %>
  </div>

  <div class="form-group">
    <%= f.label 'vehicle Number' %>
    <%= f.text_field :vehicle_number, placeholder: 'vehicle number' %>
  </div>

  <div class="form-actions">
    <%= link_to 'Back', vehicles_path, class: 'btn btn-mini btn-default' %>
    <%= f.button :submit, class: 'btn btn-mini btn-primary' %>
  </div>
<% end %>
