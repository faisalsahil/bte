<%= simple_form_for(@site) do |f| %>
  <%#= f.error_notification %>
  <% if @site.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@site.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
          <% @site.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :ntn %>

    <% if @current_user_role == AppConstants::SUPER_ADMIN %>
      <br/>
      <%= f.input :is_automate_process %>
    <% end %>
  </div>

  <div class="form-actions">
    <%#= link_to 'Back', sites_path , class:'btn btn-mini btn-default'%>
    <%= f.submit 'Create Company', class:'btn btn-mini btn-primary' %>
  </div>
<% end %>
