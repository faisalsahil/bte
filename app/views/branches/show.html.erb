<ul class="breadcrumb">
  <li><p>YOU ARE HERE</p></li>
  <li><a href="#" class="active">New Branch</a></li>
</ul>
<div class="row">
  <div class="col-md-12">
    <div class="grid simple ">
      <div class="grid-body no-border">
        <p>
          <strong>Company:</strong>
          <%= @branch.company.company_name %>
        </p>

        <p>
          <strong>Branch name:</strong>
          <%= @branch.branch_name %>
        </p>

        <p>
          <strong>Contact name:</strong>
          <%= @branch.contact_name %>
        </p>

        <p>
          <strong>Contact email:</strong>
          <%= @branch.contact_email %>
        </p>

        <p>
          <strong>Contact phone:</strong>
          <%= @branch.contact_phone %>
        </p>

        <p>
          <strong>Type of establishment:</strong>
          <%= @branch.try(:food_type).try(:name) %>
        </p>

        <p>
          <strong>Monthly oil used:</strong>
          <%= @branch.monthly_oil_used %>
        </p>

        <p>
          <strong>Storage type:</strong>
          <%= @branch.try(:storage_type).try(:name) %>
        </p>

        <p>
          <strong>Full address:</strong>
          <%= @branch.address %>
        </p>
        <%= link_to 'Back', branches_path, class: 'btn btn-mini btn-default' %>
        <%= link_to 'Edit', edit_branch_path(@branch), class: 'btn btn-mini btn-primary' %>
      </div>
    </div>
  </div>
</div>
