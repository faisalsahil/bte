<ul class="breadcrumb">
  <li><p>YOU ARE HERE</p></li>
  <li><a href="#" class="active">Areas</a></li>
  <li><%= link_to 'New Area', new_area_path, class:'btn btn-mini btn-primary' %></li>
</ul>
<div class="row">
  <div class="col-md-12">
    <div class="grid simple ">
      <div class="grid-body no-border">
        <table class="table table-striped list-data-table">
          <thead>
          <tr>
            <th>Area name</th>
            <th>Actions</th>
          </tr>
          </thead>

          <tbody>
            <% @areas.each do |area| %>
                <tr>
                  <td><%= area.name %></td>
                  <td>
                    <%= link_to '', edit_area_path(area), class: 'fa fa-edit' %>
                    <%= link_to '', area, method: :delete, class: 'fa fa-trash', data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


