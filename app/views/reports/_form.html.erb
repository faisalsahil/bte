<br/>
<div class="panel panel-primary">
  <div class="panel-heading">
    Generate Report
  </div>
  <div class="panel-body">
    <%= form_tag('/reports/generate_report', multipart: true, method: :post, class: 'form-inline', remote: true) do |f|  %>
        <div class="form-group">
          From date: <%= text_field_tag :from_date, nil, class: 'datepicker form-control', placeholder: 'optional' %>
        </div>

        <div class="form-group">
          To date:<%= text_field_tag :to_date, nil, class: 'datepicker form-control', placeholder: 'optional' %>
        </div>

        <div class="form-group">
          Select Type: <%= select_tag :report_type, options_for_select(AppConstants::REPORTS.collect {|p| [ p[:name], p[:id] ] }), {include_blank: 'Select report', class: 'form-control'} %>
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-primary" id="generate_report_button" disabled="true">Generate</button>
        </div>
    <% end %>
  </div>
</div>