<div class="page-content">
  <div id="portlet-config" class="modal hide">
    <div class="modal-header">
      <button data-dismiss="modal" class="close" type="button"></button>
      <h3>Widget Settings</h3>
    </div>
    <div class="modal-body">Widget settings form goes here</div>
  </div>
  <div class="clearfix"></div>
  <div class="content">
    <ul class="breadcrumb">
      <li><p>YOU ARE HERE</p></li>
      <li><a href="#" class="active">Add transaction</a></li>
    </ul>
    <div class="row">
      <div class="col-md-12">
        <div class="grid simple ">
          <div class="grid-body no-border">
            <div>
              <p>
                <strong>Branch:</strong>
                <%= @billing.branch_id %>
              </p>

              <p>
                <strong>Total:</strong>
                <%= @billing.total %>
              </p>

              <p>
                <strong>Paid:</strong>
                <%= @billing.paid %>
              </p>

              <p>
                <strong>Balance:</strong>
                <%= @billing.balance %>
              </p>
            </div>
            <div>
              <%= form_for @transaction, url: create_payment_billing_transactions_path(@billing), method: 'post' do |f| %>
                  <%#= f.error_notification %>

                  <div class="form-group">
                    <label>Select date:</label>
                    <%= f.text_field :transaction_date,  class: 'datepicker'%>
                  </div>

                  <div class="form-group">
                    <label>Enter amount:</label>
                    <%= f.number_field :amount , placeholder: 'amount' %>
                  </div>

                  <div class="form-actions">
                    <%= link_to 'Back', billings_path , class:'btn btn-mini btn-default'%>
                    <%= f.button :submit, class:'btn btn-mini btn-primary' %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>