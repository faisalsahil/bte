<ul class="breadcrumb">
  <li><p>YOU ARE HERE</p></li>
  <li><a href="#" class="active">Routes</a></li>
  <li><%= link_to 'New route', new_route_path, class:'btn btn-mini btn-primary' %></li>
</ul>
<div class="row">
  <div class="col-md-12">
    <div class="grid simple ">
      <div class="grid-body no-border">
        <table class="table table-striped list-data-table" id="routes_table">
          <thead>
          <tr>
            <th>Route</th>
            <th>State</th>
            <th>City</th>
            <th>Locations</th>
            <th>Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @routes&.each do |route| %>
              <tr>
                <td><%= 'Route-' %><%= route.id %></td>
                <td><%= route.state.name %></td>
                <td><%= route.city.name %></td>
                <td>
                  <%= route.route_branches.count %>
                  <%= link_to '[manage]', manage_branches_route_path(route) %>
                </td>
                <td>
                  <% if not route.is_completed %>
                    <%= link_to 'edit', edit_route_path(route), class: 'btn btn-mini btn-primary' %>
                  <% end %>
                  <% if route.is_deleted %>
                      <%= link_to 'undo', route, method: :delete, class: 'btn btn-mini btn-warning', data: { confirm: 'Are you sure?' } %>
                  <% else %>
                      <%= link_to 'delete', route, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
