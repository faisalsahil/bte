<ul class="breadcrumb">
  <li><p>YOU ARE HERE</p></li>
  <li><a href="#" class="active">Storage Types</a></li>
  <li><%= link_to 'Add new', new_storage_type_path, class: 'btn btn-primary btn-mini' %></li>
</ul>
<div class="row">
  <div class="col-md-12">
    <div class="grid simple ">
      <div class="grid-body no-border">
        <table class="table table-striped list-data-table">
          <thead>
          <tr>
            <th>Type</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @storage_types.each do |storage_type| %>
              <tr>
                <td><%= storage_type.name %></td>
                <td><%= storage_type.is_deleted? ? 'deleted' : 'active' %></td>
                <td>
                  <%= link_to 'edit',  edit_storage_type_path(storage_type), class: 'btn btn-mini btn-primary' %>
                  <% if storage_type.is_deleted %>
                      <%= link_to 'undo', storage_type, method: :delete, class: 'btn btn-mini btn-warning', data: { confirm: 'Are you sure?' } %>
                  <% else %>
                      <%= link_to 'delete', storage_type, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

